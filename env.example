# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/ma_platform"

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key-here"

# NextAuth Configuration
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Email Configuration (Optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# File Upload Configuration (Optional)
UPLOAD_MAX_SIZE="10MB"
ALLOWED_FILE_TYPES="pdf,doc,docx,xls,xlsx,txt"

# Analytics Configuration (Optional)
GOOGLE_ANALYTICS_ID="your-ga-id"
MIXPANEL_TOKEN="your-mixpanel-token"

# External APIs (Optional)
ALPHA_VANTAGE_API_KEY="your-alpha-vantage-key"
CRUNCHBASE_API_KEY="your-crunchbase-key"
PITCHBOOK_API_KEY="your-pitchbook-key"

# Security Configuration
JWT_SECRET="your-jwt-secret-key"
ENCRYPTION_KEY="your-encryption-key"

# Feature Flags
ENABLE_AI_ANALYSIS=true
ENABLE_DOCUMENT_UPLOAD=true
ENABLE_EXTERNAL_INTEGRATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=true

# Performance Configuration
CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=10
AI_REQUEST_TIMEOUT=30000 